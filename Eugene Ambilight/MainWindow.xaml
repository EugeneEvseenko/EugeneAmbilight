<Window x:Class="Eugene_Ambilight.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Eugene_Ambilight"
        mc:Ignorable="d"
        Title="Eugene Ambilight - 1.0 Alpha" Height="250" Width="400" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <Button x:Name="btnSend" Content="Button" HorizontalAlignment="Left" Margin="65,44,0,0" VerticalAlignment="Top" Height="30" Width="80" Click="btnSend_Click"/>
        <TextBox x:Name="uriServer" HorizontalAlignment="Left" Margin="50,16,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="192.168.1.27"/>
        <TextBlock x:Name="ResponseText" HorizontalAlignment="Left" Margin="170,21,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="188" Width="230" ScrollViewer.CanContentScroll="True"/>
        <CheckBox x:Name="AmbilightState" Content="CheckBox" HorizontalAlignment="Left" Margin="30,99,0,0" VerticalAlignment="Top" Width="95" Checked="AmbilightState_Changed" Unchecked="AmbilightState_Changed"/>


    </Grid>
</Window>
